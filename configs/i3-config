# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# General Settings {{{1
# Basic Settings {{{2
set $mod Mod4

font pango:Noto Serif, Demi Bold 8
# }}}2

# Startup Applications {{{2
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id feh --recursive --bg-fill --randomize /etc/nixos/configs/wallpapers/
# }}}2

# Mouse and Drag Settings {{{2
floating_modifier $mod
tiling_drag modifier titlebar
# }}}2
# }}}1

# Keybindings {{{1
# Application Launcher {{{2
# bindsym $mod+e exec --no-startup-id i3-dmenu-desktop
bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop
# }}}2

# Window Management - Basic {{{2
bindsym --border button2 kill
# bindsym $mod+Shift+W kill
bindcode $mod+Shift+59 kill
# bindsym $mod+Return exec kitty
bindcode $mod+36 exec kitty
# bindsym $mod+Shift+Return fullscreen toggle
bindcode $mod+Shift+36 fullscreen toggle
# }}}2

# Window Management - Focus {{{2
# bindsym $mod+h focus left
bindcode $mod+44 focus left
# bindsym $mod+j focus down
bindcode $mod+54 focus down
# bindsym $mod+k focus up
bindcode $mod+55 focus up
# bindsym $mod+l focus right
bindcode $mod+33 focus right
# }}}2

# Window Management - Move {{{2
# bindsym $mod+Shift+H move left
bindcode $mod+Shift+44 move left
# bindsym $mod+Shift+J move down
bindcode $mod+Shift+54 move down
# bindsym $mod+Shift+K move up
bindcode $mod+Shift+55 move up
# bindsym $mod+Shift+L move right
bindcode $mod+Shift+33 move right
# }}}2

# Layout Management {{{2
# bindsym $mod+s layout stacking
bindcode $mod+47 layout stacking
# bindsym $mod+comma layout tabbed
bindcode $mod+25 layout tabbed
# bindsym $mod+period layout toggle split
bindcode $mod+26 layout toggle split
# bindsym $mod+v split vertical
bindcode $mod+60 split vertical
# }}}2

# Floating and Focus Mode {{{2
# bindsym $mod+Shift+space floating toggle
bindcode $mod+Shift+65 floating toggle
# bindsym $mod+space focus mode_toggle
bindcode $mod+65 focus mode_toggle
# }}}2

# Scratchpad {{{2
# bindsym $mod+minus scratchpad show
bindcode $mod+48 scratchpad show
# bindsym $mod+Shift+underscore move scratchpad
bindcode $mod+Shift+48 move scratchpad
# }}}2

# Container Navigation {{{2
# bindsym $mod+Down focus child
bindcode $mod+116 focus child
# bindsym $mod+Up focus parent
bindcode $mod+111 focus parent
# bindsym $mod+Left workspace prev
bindcode $mod+113 workspace prev
# bindsym $mod+Right workspace next
bindcode $mod+114 workspace next
# }}}2

# Marks {{{2
# bindsym $mod+m exec i3-input -F 'mark %s' -l 1 -P 'Mark: '
bindcode $mod+58 exec i3-input -F 'mark %s' -l 1 -P 'Mark: '
# bindsym $mod+g exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '
bindcode $mod+42 exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '
# bindsym $mod+p exec i3-input -F 'move window to mark %s' -l 1 -P 'Move to: '
bindcode $mod+27 exec i3-input -F 'move window to mark %s' -l 1 -P 'Move to: '
# }}}2

# Resize Mode {{{2
mode "resize" {
        # bindsym h resize shrink width 10 px or 10 ppt
        bindcode 44 resize shrink width 10 px or 10 ppt
        # bindsym j resize grow height 10 px or 10 ppt
        bindcode 54 resize grow height 10 px or 10 ppt
        # bindsym k resize shrink height 10 px or 10 ppt
        bindcode 55 resize shrink height 10 px or 10 ppt
        # bindsym l resize grow width 10 px or 10 ppt
        bindcode 33 resize grow width 10 px or 10 ppt

        # bindsym Left resize shrink width 10 px or 10 ppt
        bindcode 113 resize shrink width 10 px or 10 ppt
        # bindsym Down resize grow height 10 px or 10 ppt
        bindcode 116 resize grow height 10 px or 10 ppt
        # bindsym Up resize shrink height 10 px or 10 ppt
        bindcode 111 resize shrink height 10 px or 10 ppt
        # bindsym Right resize grow width 10 px or 10 ppt
        bindcode 114 resize grow width 10 px or 10 ppt

        # bindsym Return mode "default"
        bindcode 36 mode "default"
        # bindsym Escape mode "default"
        bindcode 9 mode "default"
        # bindsym $mod+r mode "default"
        bindcode $mod+32 mode "default"
}

# bindsym $mod+r mode "resize"
bindcode $mod+32 mode "resize"
# }}}2
# }}}1

# Workspaces {{{1
# Workspace Definitions {{{2
set $ws1 "1-MAIN"
set $ws2 "2-ALTRN"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8-GCHROM"
set $ws9 "9-COMM"
set $ws10 "10"
# }}}2

# Workspace Switching {{{2
bindcode $mod+10 workspace number $ws1
bindcode $mod+11 workspace number $ws2
bindcode $mod+12 workspace number $ws3
bindcode $mod+13 workspace number $ws4
bindcode $mod+14 workspace number $ws5
bindcode $mod+15 workspace number $ws6
bindcode $mod+16 workspace number $ws7
bindcode $mod+17 workspace number $ws8
bindcode $mod+18 workspace number $ws9
bindcode $mod+19 workspace number $ws10
# }}}2

# Move Container to Workspace {{{2
bindcode $mod+Shift+10 move container to workspace number $ws1
bindcode $mod+Shift+11 move container to workspace number $ws2
bindcode $mod+Shift+12 move container to workspace number $ws3
bindcode $mod+Shift+13 move container to workspace number $ws4
bindcode $mod+Shift+14 move container to workspace number $ws5
bindcode $mod+Shift+15 move container to workspace number $ws6
bindcode $mod+Shift+16 move container to workspace number $ws7
bindcode $mod+Shift+17 move container to workspace number $ws8
bindcode $mod+Shift+18 move container to workspace number $ws9
bindcode $mod+Shift+19 move container to workspace number $ws10
# }}}2

# Workspace Assignments {{{2
assign [class="discord"] → $ws9
# }}}2

# Initial Workspace {{{2
exec i3-msg workspace $ws1
# }}}2
# }}}1

# Appearance and UI {{{1
# Status Bar {{{2
bar {
        font pango:Noto Serif 10
        separator_symbol ":|:"
        status_command i3status
}
# }}}2

# Gaps and Appearance {{{2
gaps inner 8px
gaps bottom 0px

focus_follows_mouse no

default_border normal
default_floating_border normal
# }}}2
# }}}1

# Window Rules {{{1
# KDE Plasma {{{2
for_window [all] title_window_icon on
for_window [title="Desktop — Plasma"] kill, floating enable, border none
for_window [title="Desktop @ QRect"] kill, floating enable, border none
for_window [class="plasmashell"] floating enable
for_window [class="Plasma"] floating enable, border none
for_window [title="plasma-desktop"] floating enable, border none
for_window [title="win7"] floating enable, border none
for_window [class="krunner"] floating enable, border none
for_window [class="Kmix"] floating enable, border none
for_window [class="Klipper"] floating enable, border none
for_window [class="Plasmoidviewer"] floating enable, border none
for_window [class="plasmashell" window_type="notification"] floating enable, border none, move right 700px, move down 450px
no_focus [class="plasmashell" window_type="notification"]
# }}}2

# Applications {{{2
for_window [class="(?i).*nextcloud.*"] floating disable
for_window [title="Plover: Suggestions"] floating enable, border pixel 5, move scratchpad, move right 50px, move up 200px
# }}}2
# }}}1

